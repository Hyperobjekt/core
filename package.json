{
  "name": "root",
  "private": true,
  "scripts": {
    "coverage": "jest --coverage",
    "unit": "jest",
    "dev": "start-storybook -p 5555",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "build": "lerna exec --parallel -- babel --root-mode upward src -d lib --ignore **/*.stories.js,**/*.spec.js",
    "build:hooks": "lerna exec --scope=\"@hyperobjekt/hooks\" --parallel -- babel --root-mode upward src -d lib --ignore **/*.stories.js,**/*.spec.js",
    "deploy-storybook": "storybook-to-ghpages --source-branch \"main\""
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "@harelpls/storybook-addon-materialui": "^2.0.0",
    "@material-ui/icons": "^4.11.2",
    "@n8tb1t/use-scroll-position": "^2.0.3",
    "@storybook/addon-docs": "^6.2.7",
    "@storybook/addon-essentials": "^6.2.7",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/preset-create-react-app": "^3.1.7",
    "@storybook/react": "^6.2.7",
    "@storybook/storybook-deployer": "^2.8.7",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^26.6.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-react-docgen": "^4.2.1",
    "babel-plugin-styled-components": "^1.11.1",
    "jest": "^26.6.0",
    "jest-haste-map": "^26.6.0",
    "jest-resolve": "^26.6.0",
    "jest-styled-components": "^7.0.3",
    "lerna": "^3.22.1",
    "react": "^16.13.1",
    "react-docgen": "^5.3.1",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "styled-components": "^5.2.0",
    "webpack": "4.44.2"
  },
  "resolutions": {
    "react": "^16.13.1 || ^17.0.0",
    "react-dom": "^16.13.1 || ^17.0.0",
    "@material-ui/core": "^4.11.0"
  },
  "dependencies": {
    "@material-ui/core": "^4.11.0"
  }
